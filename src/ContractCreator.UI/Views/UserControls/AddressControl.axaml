<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ContractCreator.UI.ViewModels.UserControls"
             xmlns:dto="using:ContractCreator.Shared.DTOs.Data"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="150"
             x:Class="ContractCreator.UI.Views.UserControls.AddressControl"
             x:DataType="vm:AddressViewModel">

    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, 10, Auto">
        
        <Grid Grid.Row="0">
            
            <TextBox Name="SearchBox"
                     Text="{Binding SearchText, Mode=TwoWay}"
                     Watermark="Введите адрес (Город, Улица)...">
            </TextBox>

            <Popup PlacementTarget="{Binding #SearchBox}"
                   IsOpen="{Binding IsDropDownOpen, Mode=TwoWay}"
                   MinWidth="{Binding #SearchBox.Bounds.Width}"
                   MaxHeight="300"
                   IsLightDismissEnabled="True">
                
                <Border Background="{DynamicResource CardBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="0,0,5,5"
                        BoxShadow="{DynamicResource MenuShadow}">
                    
                    <ListBox ItemsSource="{Binding SearchResults}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0"
                             SelectionChanged="OnAddressSelected">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type dto:AddressSearchResultDto}">
                                <Grid Margin="0,2">
                                    <TextBlock Text="{Binding FullAddress}" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Popup>
        </Grid>

        <Grid Grid.Row="2" ColumnDefinitions="*, 5, *, 5, *, 5, *">
            
            <TextBox Grid.Column="0" Text="{Binding House}" Watermark="Дом" MaxLength="10"/>
            <TextBox Grid.Column="2" Text="{Binding Building}" Watermark="Корпус" MaxLength="10"/>
            <TextBox Grid.Column="4" Text="{Binding Flat}" Watermark="Кв./Оф." MaxLength="10"/>
            <TextBox Grid.Column="6" Text="{Binding PostalIndex}" Watermark="Индекс" MaxLength="6"/>
            
        </Grid>
    </Grid>
</UserControl>