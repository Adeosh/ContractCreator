<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ContractCreator.UI.ViewModels.UserControls"
             xmlns:dto="using:ContractCreator.Shared.DTOs.Data"
             x:Class="ContractCreator.UI.Views.UserControls.BankAccountsControl"
             x:DataType="vm:BankAccountsViewModel">

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </UserControl.Styles>

    <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="15" BoxShadow="0 1 3 0 #20000000">
        <StackPanel>
            <Grid ColumnDefinitions="*, Auto">
                <TextBlock Text="Банковские реквизиты" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource ActionBrush}"/>
                
                <Button Grid.Column="1" Command="{Binding AddCommand}" IsVisible="{Binding IsListMode}"
                        Classes="accent" Content="Добавить счет" FontSize="12" Padding="15,6"/>
            </Grid>
            
            <Separator Margin="0,10" Background="{DynamicResource BorderBrush}" Opacity="0.5"/>
            
            <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsBusy}" Height="2" Margin="0,-12,0,10"/>


            <Grid IsVisible="{Binding IsListMode}" RowDefinitions="*, Auto">
                <DataGrid ItemsSource="{Binding Accounts}" 
                          SelectedItem="{Binding SelectedAccount}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          Height="180"
                          GridLinesVisibility="Horizontal"
                          Background="Transparent"
                          BorderThickness="1"
                          BorderBrush="{DynamicResource BorderBrush}"
                          CornerRadius="4">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="БИК" Binding="{Binding BIC}" Width="100"/>
                        <DataGridTextColumn Header="Банк" Binding="{Binding BankName}" Width="*"/>
                        <DataGridTextColumn Header="Счет" Binding="{Binding AccountNumber}" Width="220"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0" HorizontalAlignment="Right">
                    <Button Content="Изменить" Command="{Binding EditCommand}"/>
                    <Button Content="Удалить" Command="{Binding DeleteCommand}" Classes="windowBtn closeBtn" Width="80"/>
                </StackPanel>
            </Grid>


            <Grid IsVisible="{Binding !IsListMode}" RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, 15, *">
                
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5" Margin="0,0,0,15">
                    <TextBlock Text="Поиск банка (БИК или Название)" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    
                    <TextBox Name="SearchBox" Text="{Binding SearchBicText}" Classes="outline"
                             Watermark="Введите БИК или имя..."/>

                    <Popup PlacementTarget="{Binding #SearchBox}" 
                           IsOpen="{Binding IsBankDropDownOpen, Mode=TwoWay}" 
                           MinWidth="{Binding #SearchBox.Bounds.Width}"
                           MaxHeight="250" IsLightDismissEnabled="True">
                        
                        <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" CornerRadius="4" BoxShadow="0 4 10 0 #40000000">
                            
                            <ListBox ItemsSource="{Binding FoundBanks}" SelectionChanged="OnBankSelected" Background="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type dto:BankDto}">
                                        <Grid ColumnDefinitions="*, Auto" Margin="0,2">
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" TextWrapping="NoWrap"/>
                                                <TextBlock Text="{Binding Address}" FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}" 
                                                           TextWrapping="NoWrap" MaxWidth="350" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <Border Grid.Column="1" Background="{DynamicResource RegionBrush}" CornerRadius="4" Padding="5,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Bic}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource ActionBrush}"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                    </Popup>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Spacing="5" Margin="0,0,0,15">
                    <TextBlock Text="Данные банка" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <Border Background="{DynamicResource RegionBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" CornerRadius="4" Padding="10,5" MinHeight="34" VerticalAlignment="Top">
                        <StackPanel>
                             <TextBlock Text="{Binding BankName}" FontWeight="SemiBold" IsVisible="{Binding BankName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                             <TextBlock Text="{Binding BankAddress}" FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap"
                                        IsVisible="{Binding BankAddress, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                             <TextBlock Text="Банк не выбран" Opacity="0.4" IsVisible="{Binding BankName, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>


                <StackPanel Grid.Row="1" Grid.Column="0" Spacing="5" Margin="0,0,0,10">
                    <TextBlock Text="Корр. счет" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <MaskedTextBox Mask="00000000000000000000" Text="{Binding CorrespondentAccount}" Classes="outline" IsReadOnly="False"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Spacing="5" Margin="0,0,0,10">
                    <TextBlock Text="Расчетный счет" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <MaskedTextBox Mask="00000000000000000000" Text="{Binding AccountNumber}" Classes="outline"/>
                </StackPanel>


                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="15" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Отмена" Command="{Binding CancelCommand}"/>
                    <Button Content="Сохранить" Command="{Binding SaveCommand}" Classes="accent" FontWeight="Bold" Padding="25,8"/>
                </StackPanel>

            </Grid>
        </StackPanel>
    </Border>
</UserControl>