<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="ContractCreator.UI.App"
			 xmlns:local="using:ContractCreator.UI"
			 xmlns:converters="using:ContractCreator.UI.Converters"
			 RequestedThemeVariant="Light">

	<Application.Resources>
		<ResourceDictionary>

			<ResourceDictionary.MergedDictionaries>
				<MergeResourceInclude Source="/Assets/Themes/AppTheme.axaml"/>
			</ResourceDictionary.MergedDictionaries>

			<FontFamily x:Key="NunitoFont">avares://ContractCreator.UI/Assets/Fonts#Nunito</FontFamily>

			<converters:EnumDescriptionConverter x:Key="EnumDescConverter" />
			<converters:NotEqualConverter x:Key="NotEqualConverter" />
			<converters:ActiveEntityTooltipConverter x:Key="ActiveEntityTooltipConverter" />
			<converters:DateOnlyToDateTimeOffsetConverter x:Key="DateConverter"/>
		</ResourceDictionary>
	</Application.Resources>

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

		<StyleInclude Source="/Assets/Styles/GlobalStyles.axaml"/>
	</Application.Styles>
</Application>