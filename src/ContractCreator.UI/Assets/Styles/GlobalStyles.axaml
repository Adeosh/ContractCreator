<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:CompileBindings="False">

	<Style Selector="Button.windowBtn">
		<Setter Property="Width" Value="46"/> <Setter Property="Height" Value="32"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="CornerRadius" Value="4"/> <Setter Property="Margin" Value="2,0"/>
	</Style>

	<Style Selector="Button.windowBtn:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="#1282a2"/> <Setter Property="Foreground" Value="White"/>
	</Style>

	<Style Selector="Button.closeBtn:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="#ef233c"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>

	<Style Selector="Button.accent">
		<Setter Property="Background" Value="{DynamicResource ActionBrush}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="15,8"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
	</Style>
	<Style Selector="Button.accent /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource ActionBrush}"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>
	<Style Selector="Button.accent:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource ActionHoverBrush}"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>
	<Style Selector="Button.accent:pressed /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource ActionHoverBrush}"/>
		<Setter Property="Opacity" Value="0.8"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>

	<Style Selector="Menu">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="45"/>
    </Style>

    <Style Selector="MenuItem">
        <Setter Property="Header" Value="{Binding Header}"/>
        <Setter Property="ItemsSource" Value="{Binding Items}"/>
        <Setter Property="Command" Value="{Binding Command}"/>
        <Setter Property="CommandParameter" Value="{Binding CommandParameter}"/>
        
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        
        <Setter Property="CornerRadius" Value="0,0,10,10"/> 
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style Selector="Menu > MenuItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="#1282a2"/> 
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
    
    <Style Selector="Menu > MenuItem:pointerover /template/ ContentPresenter#PART_HeaderPresenter">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Menu > MenuItem:pressed /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="#1282a2"/>
    </Style>
    <Style Selector="Menu > MenuItem:pressed /template/ ContentPresenter#PART_HeaderPresenter">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="MenuItem > MenuItem">
        <Setter Property="Background" Value="{DynamicResource RegionBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style Selector="Menu > MenuItem /template/ Popup > Border">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0,0,10,10"/> 
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BoxShadow" Value="0 4 10 0 #40000000"/> 
    </Style>
    
    <Style Selector="MenuItem:not(:has-items)">
         <Setter Property="Padding" Value="10,8"/>
    </Style>

    <Style Selector="MenuItem > MenuItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="Background" Value="{DynamicResource ActionBrush}"/>
    </Style>
    <Style Selector="MenuItem > MenuItem:pointerover /template/ ContentPresenter#PART_HeaderPresenter">
        <Setter Property="Foreground" Value="White"/>
    </Style>

</Styles>