<ResourceDictionary xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Design.PreviewWith>
		<Border Padding="0" Width="700" Height="500">
			<Grid ColumnDefinitions="*,*">

				<ThemeVariantScope RequestedThemeVariant="Light" Grid.Column="0">
					<Border Background="{DynamicResource RegionBrush}" Padding="20">
						<StackPanel Spacing="10">
							<TextBlock Text="LIGHT THEME" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center"/>

							<Separator Margin="0,10" Background="{DynamicResource BorderBrush}"/>

							<Border Background="{DynamicResource CardBrush}" Height="40" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
								<TextBlock Text="Card (Карточка)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
							</Border>

							<StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
								<Border Background="{DynamicResource ActionBrush}" Height="40" Width="80" CornerRadius="5">
									<TextBlock Text="Action" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
								</Border>
								<Border Background="{DynamicResource BorderBrush}" Height="40" Width="80" CornerRadius="5">
									<TextBlock Text="Border" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
								</Border>
							</StackPanel>

							<Border Background="{DynamicResource CardBrush}" Padding="10" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
								<StackPanel>
									<TextBlock Text="Primary Text" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
									<TextBlock Text="Secondary Text" Foreground="{DynamicResource SecondaryTextBrush}"/>
									<TextBlock Text="Window Border" Foreground="{DynamicResource WindowBorderBrush}"/>
								</StackPanel>
							</Border>
						
							<StackPanel Orientation="Horizontal" Spacing="20">
								<Border Background="{DynamicResource WarningBrush}" Height="20" Width="80" CornerRadius="5" />
								<TextBlock Text="Warning Brush" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
								<TextBlock Text="Royal Gold" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
							</StackPanel>

							<StackPanel Orientation="Horizontal" Spacing="20">
								<Border Background="{DynamicResource ErrorBrush}" Height="20" Width="80" CornerRadius="5"/>
								<TextBlock Text="Error Brush" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
								<TextBlock Text="Strawberry Red" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
							</StackPanel>

						</StackPanel>
					</Border>
				</ThemeVariantScope>

				<ThemeVariantScope RequestedThemeVariant="Dark" Grid.Column="1">
					<Border Background="{DynamicResource RegionBrush}" Padding="20">
						<StackPanel Spacing="10">
							<TextBlock Text="DARK THEME" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center"/>

							<Separator Margin="0,10" Background="{DynamicResource BorderBrush}"/>

							<Border Background="{DynamicResource CardBrush}" Height="40" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
								<TextBlock Text="Card (Карточка)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
							</Border>

							<StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
								<Border Background="{DynamicResource ActionBrush}" Height="40" Width="80" CornerRadius="5">
									<TextBlock Text="Action" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
								</Border>
								<Border Background="{DynamicResource BorderBrush}" Height="40" Width="80" CornerRadius="5">
									<TextBlock Text="Border" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
								</Border>
							</StackPanel>

							<Border Background="{DynamicResource CardBrush}" Padding="10" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
								<StackPanel>
									<TextBlock Text="Primary Text" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
									<TextBlock Text="Secondary Text" Foreground="{DynamicResource SecondaryTextBrush}"/>
									<TextBlock Text="Window Border" Foreground="{DynamicResource WindowBorderBrush}"/>
								</StackPanel>
							</Border>
						</StackPanel>
					</Border>
				</ThemeVariantScope>

			</Grid>
		</Border>
	</Design.PreviewWith>

	<Color x:Key="ErrorColor">#ef233c</Color>
	<SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

	<Color x:Key="WarningColor">#ffe169</Color>
	<SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>

	<Color x:Key="ActionColor">#5cb9a6</Color>
	<SolidColorBrush x:Key="ActionBrush" Color="{StaticResource ActionColor}"/>

	<Color x:Key="ActionHoverColor">#60d9c3</Color>
	<SolidColorBrush x:Key="ActionHoverBrush" Color="{StaticResource ActionHoverColor}"/>

	<Color x:Key="ShadowColor">#8d99ae</Color>
	<SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}" Opacity="0.2"/>

	<ResourceDictionary.ThemeDictionaries>

		<ResourceDictionary x:Key="Light">
			<Color x:Key="RegionColor">#edf2f4</Color>
			<SolidColorBrush x:Key="RegionBrush" Color="{StaticResource RegionColor}"/>

			<Color x:Key="CardColor">#edf2f4</Color>
			<SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>

			<Color x:Key="PrimaryTextColor">#1282a2</Color>
			<SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>

			<Color x:Key="SecondaryTextColor">#8d99ae</Color>
			<SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>

			<Color x:Key="WindowBorderColor">#8d99ae</Color>
			<SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource WindowBorderColor}"/>

			<Color x:Key="BorderColor">#1282a2</Color>
			<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
		</ResourceDictionary>


		<ResourceDictionary x:Key="Dark">
			<Color x:Key="RegionColor">#2b2d42</Color>
			<SolidColorBrush x:Key="RegionBrush" Color="{StaticResource RegionColor}"/>

			<Color x:Key="CardColor">#34364f</Color>
			<SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>

			<Color x:Key="PrimaryTextColor">#edf2f4</Color>
			<SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>

			<Color x:Key="WindowBorderColor">#edf2f4</Color>
			<SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource WindowBorderColor}" Opacity="0.9"/>

			<Color x:Key="SecondaryTextColor">#8d99ae</Color>
			<SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>

			<Color x:Key="BorderColor">#60d9c3</Color>
			<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
		</ResourceDictionary>

	</ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>